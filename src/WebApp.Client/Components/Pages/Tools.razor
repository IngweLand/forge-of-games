@attribute [Route(FogUrlBuilder.PageRoutes.BASE_TOOLS_PATH)]
@using Ingweland.Fog.Application.Client.Web.Localization
@using Ingweland.Fog.Application.Core.Helpers
@using Microsoft.Extensions.Localization
@using Ingweland.Fog.WebApp.Client.Components.Elements
@inherits Ingweland.Fog.WebApp.Client.Components.Pages.Abstractions.FogPageBase
<div class="root">
    <div class="section-container">
        <h4 class="section-name">@Loc[FogResource.Hoh_City]</h4>
        <div class="items-container">
            <ToolListItemComponent PageLink="tools/building-cost-calculator" Name="@Loc[FogResource.Tools_BuildingCost_Name]"
                                   Description="@Loc[FogResource.Tools_BuildingCost_Description]"
                                   Icon="fa-calculator"/>
            <ToolListItemComponent PageLink="tools/wonder-cost-calculator" Name="@Loc[FogResource.Tools_WonderCost_Name]"
                                   Description="@Loc[FogResource.Tools_WonderCost_Description]"
                                   Icon="fa-calculator"/>
            <ToolListItemComponent PageLink="city-planner" Name="@Loc[FogResource.CityPlanner_Title]"
                                   Description="@Loc[FogResource.CityPlanner_Meta_Description]"
                                   Icon="fa-wrench"/>
        </div>
        <h4 class="section-name">@Loc[FogResource.Hoh_Hero]</h4>
        <div class="items-container">
            <ToolListItemComponent PageLink="command-center" Name="@Loc[FogResource.CommandCenter_Title]"
                                   Description="@Loc[FogResource.CommandCenter_Meta_Description]"
                                   Icon="fa-wrench"/>
        </div>
        <h4 class="section-name">@Loc[FogResource.Hoh_Research]</h4>
        <div class="items-container">
            <ToolListItemComponent PageLink="tools/research-calculator" Name="@Loc[FogResource.Tools_ResearchCalculator_Name]"
                                   Description="@Loc[FogResource.Tools_ResearchCalculator_Description]"
                                   Icon="fa-calculator"/>
        </div>
    </div>
</div>

