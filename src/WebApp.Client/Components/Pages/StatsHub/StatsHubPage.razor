@attribute [Route(FogUrlBuilder.PageRoutes.BASE_STATS_HUB_PATH)]
@using Ingweland.Fog.Application.Client.Web.Localization
@using Ingweland.Fog.Application.Core.Helpers
@using Ingweland.Fog.WebApp.Client.Components.Elements.StatsHub
@inherits StatsHubPageBase
@if (IsInitialized)
{
    <div class="page-container">
        <div class="column">
            <PlayerStatsTopListComponent
                Title="@Loc[FogResource.StatsHub_Worlds_TopPlayerListTitle, FogResource.StatsHub_Worlds_MainWorld]"
                ViewAllUrl="@FogUrlBuilder.PageRoutes.WorldPlayers("un1")"
                Players="@_topStats?.MainWorldPlayers"/>
        </div>
        <div class="column">
            <AllianceStatsTopListComponent
                Title="@Loc[FogResource.StatsHub_Worlds_TopAllianceListTitle, FogResource.StatsHub_Worlds_MainWorld]"
                ViewAllUrl="@FogUrlBuilder.PageRoutes.WorldAlliances("un1")"
                Alliances="@_topStats?.MainWorldAlliances"/>
        </div>
        <div class="column">
            <PlayerStatsTopListComponent
                Title="@Loc[FogResource.StatsHub_Worlds_TopPlayerListTitle, FogResource.StatsHub_Worlds_BetaWorld]"
                ViewAllUrl="@FogUrlBuilder.PageRoutes.WorldPlayers("zz1")"
                Players="@_topStats?.BetaWorldPlayers"/>

        </div>
        <div class="column">
            <AllianceStatsTopListComponent
                Title="@Loc[FogResource.StatsHub_Worlds_TopAllianceListTitle, FogResource.StatsHub_Worlds_BetaWorld]"
                ViewAllUrl="@FogUrlBuilder.PageRoutes.WorldAlliances("zz1")"
                Alliances="@_topStats?.BetaWorldAlliances"/>

        </div>
        
        <div class="column">
            <TopHeroesComponent
                Title="@Loc[FogResource.StatsHub_TopHeroesListTitle]"
                Heroes="@_topStats?.Heroes"/>

        </div>
    </div>
}
else
{
    <LoadingIndicator/>
}