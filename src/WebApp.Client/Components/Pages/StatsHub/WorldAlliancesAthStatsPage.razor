                  CssClass="side-ad-container side-ad-container-left side-ad-container-160"/>
<AdSenseComponent AdSlot="2924115885" AdClass="side-ad-300"
                  CssClass="side-ad-container side-ad-container-left side-ad-container-300"/>
@if (IsInitialized)
{
    <StatsListComponent Title="@Title" Items="@Items" IsLoading="@IsLoading">
        <FilterTemplate>
            <AthLeagueSelectorComponent Leagues="@_treasureHuntLeagues" SelectedLeague="@_selectedLeague"
                                        LeagueChanged="@OnLeagueChanged"/>
        </FilterTemplate>
        <ItemTemplate>
            <a class="anchor-inherited-style" href="@FogUrlBuilder.PageRoutes.Alliance(context.Id)"
               @onclick="OnItemClicked">
                <AllianceListItemComponent ShowRank="true" Alliance="@context"/>
            </a>
        </ItemTemplate>
    </StatsListComponent>
}
else
{
    <LoadingIndicator/>
}
<AdSenseComponent AdSlot="7526140641" AdClass="side-ad-160"
                  CssClass="side-ad-container side-ad-container-right side-ad-container-160"/>
