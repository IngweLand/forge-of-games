@using Ingweland.Fog.Application.Client.Web.ViewModels.Hoh
@using MudBlazor.Utilities
@using Size = MudBlazor.Size
<div class="@ValueContainerClass">
    <img src="@ResourceValue.IconUrl" alt="resource icon" class="@ValueIconClass">
    <span class="@LabelClass">@ResourceValue.Label</span>
</div>

@code {

    [Parameter]
    [EditorRequired]
    public IconLabelItemViewModel ResourceValue { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Medium;
    
    private string ValueContainerClass => new CssBuilder("value-container")
        .AddClass($"value-container-size-{Size.ToDescriptionString()}")
        .Build();
    
    private string ValueIconClass => new CssBuilder("value-icon")
        .AddClass($"value-icon-size-{Size.ToDescriptionString()}")
        .Build();
    
    private string LabelClass => new CssBuilder("label")
        .AddClass($"label-size-{Size.ToDescriptionString()}")
        .Build();
}