@using Ingweland.Fog.Application.Client.Web.ViewModels.Hoh.City
@using MudBlazor.Utilities
<MudSelectItem Value="LevelSpecs">
    <div class="data-items">
        <div class="@LevelLabelClass">@LevelSpecs.Level</div>
        @if (LevelSpecs.AgeName != null)
        {
            <div class="@AgeLabelClass" style="background-color: @LevelSpecs.AgeColor">@LevelSpecs.AgeName</div>
        }
        @if (LevelSpecs.CanBeConstructed)
        {
            <span class="@IconClass">construction</span>
        }
        @if (LevelSpecs.CanBeUpgradedTo)
        {
            <span class="@IconClass">upgrade</span>
        }
    </div>
</MudSelectItem>

@code {
    [Parameter]
    public required BuildingLevelSpecs LevelSpecs { get; set; }
    
    [Parameter]
    public bool Dense { get; set; } = false;

    private string LevelLabelClass => new CssBuilder()
        .AddClass("header-label")
        .AddClass("header-label-dense", Dense)
        .AddClass("level-label")
        .AddClass("level-label-dense", Dense)
        .Build();
    
    private string AgeLabelClass => new CssBuilder()
        .AddClass("header-label")
        .AddClass("header-label-dense", Dense)
        .AddClass("age-label")
        .AddClass("age-label-dense", Dense)
        .Build();
    
    private string IconClass => new CssBuilder()
        .AddClass("material-symbols-outlined")
        .AddClass("component-icon")
        .AddClass("component-icon-dense", Dense)
        .Build();
}