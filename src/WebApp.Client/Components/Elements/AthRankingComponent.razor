@using Ingweland.Fog.Application.Client.Web.Providers.Interfaces
@using Ingweland.Fog.Application.Client.Web.StatsHub.ViewModels
@inject IAssetUrlProvider AssetUrlProvider
<div class="component-root">
    <div class="event-label-container">
        @Ranking.EventLabel
    </div>
    <div class="league-container">
        <img class="league-icon" src="@AssetUrlProvider.GetHohTreasureHuntLeagueIconUrl(Ranking.League.League)"/>
        <span class="league-name">@Ranking.League.Name</span>
    </div>
    <div class="points-container">
        @Ranking.PointsFormatted
    </div>
</div>

@code {

    [Parameter]
    [EditorRequired]
    public required AllianceAthRankingViewModel Ranking { get; set; }

}