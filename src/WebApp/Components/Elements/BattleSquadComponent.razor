@using Ingweland.Fog.Application.Client.Web.Extensions
@using Ingweland.Fog.Application.Client.Web.ViewModels.Hoh.Battle
<div class="fog-container d-flex overflow-hidden @(Squad.IsHero ? "stripes" : "")">
    <div class="unit-image-container flex-shrink-0">
        <img class="h-100 w-100 object-fit-cover" src="@Squad.ImageUrl">
    </div>

    <div class="flex-grow-1 d-flex flex-column px-2" style="min-width: 0">
        <div class="d-flex align-items-end justify-content-start h-50 fs-6">
            <span class="text-truncate">@Squad.Name</span>
        </div>
        <div class="d-flex align-items-start justify-content-start h-50"
             style="font-size: 0.75rem !important;">@Squad.Level</div>
    </div>

    <div class="trailing-container d-flex flex-column m-0 p-0 flex-shrink-0"
         style="background-color: @Squad.Color.ToCssColorVar()">
        <div class="unit-type-icon-container">
            <img class="object-fit-contain" src="@Squad.TypeIconUrl">
        </div>
        @if (!Squad.IsHero)
        {
            <div class="unit-amount-container">
                <span>@Squad.Amount</span>
            </div>
        }
    </div>
</div>

@code {

    [Parameter]
    public required BattleWaveSquadViewModel Squad { get; set; }

}